<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/assets/css/style.css">
</head>

<body>
    <header>
        <%- include('../components/header.ejs') %>
    </header>
    <section id="movieBild">
        <img src="https://image.tmdb.org/t/p/original<%=dataMovie.backdrop_path %>" alt="">
        <div class="average">
            <div>
                <span>&#10029;</span>
                <h1>
                    <%= dataMovie.vote_average %> / 10
                </h1>
                <p>
                    <%= dataMovie.vote_count %>
                </p>
            </div>
        </div>
    </section>
    <section id="movieID">
        <div>
            <h2>
                <%=dataMovie.title %>
            </h2>
            <div>
                <span>
                    <%=dataMovie.release_date %>
                </span>
                <span>
                    <%=dataMovie.status %>
                </span>
            </div>
            <div>
                <% dataMovie.genres.forEach(elt=> { %>
                    <span>
                        <%= elt.name %>
                    </span>
                    <% }) %>
            </div>
            <h1>
                <%=dataMovie.tagline %>
            </h1>
            <p>
                <%=dataMovie.overview %>
            </p>
        </div>
        <div>
            <iframe class="trailer" src="https://www.youtube.com/embed/<%= trailerKey[0].key %>"
                title="YouTube video player" frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen>
            </iframe>
        </div>
    </section>
</body>

</html>